[sssd]
config_file_version = 2
reconnection_retries = 3
sbus_timeout = 30
services = nss, pam
domains = ldap

[domain/ldap]
id_provider = ldap
auth_provider = ldap
ldap_uri = ldap://{{ hostname }}.{{ domainname }}
ldap_search_base = {{ basedn }}
ldap_tls_reqcert = demand
cache_credentials = true
enumerate = true
